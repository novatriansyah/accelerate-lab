<IfModule mod_rewrite.c>
    RewriteEngine On

    # 1. Block access to sensitive files
    <FilesMatch "^\.">
        Order allow,deny
        Deny from all
    </FilesMatch>
    <FilesMatch "(composer\.json|composer\.lock|package\.json|package-lock\.json|webpack\.mix\.js|yarn\.lock)$">
        Order allow,deny
        Deny from all
    </FilesMatch>
    <FilesMatch "^\.env">
        Order allow,deny
        Deny from all
    </FilesMatch>

    # 2. Redirect all requests to the public/ folder
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
